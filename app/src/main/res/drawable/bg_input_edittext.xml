<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <!-- Dégradé doux au lieu de couleur unie -->
    <gradient
        android:startColor="#F0F4FF"
    android:endColor="#E3F2FD"
    android:angle="270" />

    <!-- Coins arrondis plus généreux -->
    <corners android:radius="16dp" />

    <!-- Bordure subtile et légère -->
    <stroke
        android:width="1dp"
        android:color="#D0D8E8" />       <!-- gris bleuté élégant -->
</shape>

