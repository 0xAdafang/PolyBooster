<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <!-- Icône principale -->
        <ImageView
            android:id="@+id/cardIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="@null"
            android:background="@drawable/icon_background"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_launcher_foreground" />

        <!-- Français -->
        <LinearLayout
            android:id="@+id/frContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:id="@+id/frIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_flag_fr"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/cardFrText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FR : ..."
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#000000"/>
        </LinearLayout>

        <!-- Ligne séparatrice -->
        <View
            android:layout_width="60dp"
            android:layout_height="2dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="12dp"/>

        <!-- Anglais -->
        <LinearLayout
            android:id="@+id/enContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/enIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_flag_uk"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/cardEnText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EN : ..."
                android:textSize="18sp"
                android:textColor="#555555"/>
        </LinearLayout>

        <!-- Espagnol -->
        <LinearLayout
            android:id="@+id/esContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:id="@+id/esIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_flag_es"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/cardEsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ES : ..."
                android:textSize="18sp"
                android:textColor="#555555"/>
        </LinearLayout>

        <!-- Catégorie / Portfolio -->
        <TextView
            android:id="@+id/cardPortfolio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Catégorie : ..."
            android:textSize="14sp"
            android:textColor="#888888"
            android:textStyle="italic"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>


